<!-- ✅ Payment Section -->
<section class="py-32 bg-gray-900">
  <div class="container mx-auto px-6 max-w-lg">
    <div
      class="bg-gray-800 p-8 rounded-xl shadow-lg hover-glow"
      data-aos="fade-up"
    >
      <h2 class="text-3xl font-bold mb-6 gradient-text text-center">
        Payment Portal
      </h2>
      <p class="text-gray-400 mb-8 text-center">
        Complete your payment securely. (This is a demo page, no real payment
        will be processed.)
      </p>

      <form class="space-y-6">
        <!-- Cardholder Name -->
        <div>
          <label class="block text-gray-300 mb-2 font-semibold"
            >Cardholder Name</label
          >
          <input
            type="text"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="John Doe"
          />
        </div>

        <!-- Card Number -->
        <div>
          <label class="block text-gray-300 mb-2 font-semibold"
            >Card Number</label
          >
          <input
            type="text"
            required
            maxlength="16"
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="1234 5678 9012 3456"
          />
        </div>

        <!-- Expiry & CVV -->
        <div class="flex space-x-4">
          <div class="flex-1">
            <label class="block text-gray-300 mb-2 font-semibold"
              >Expiry Date</label
            >
            <input
              type="text"
              required
              maxlength="5"
              class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
              placeholder="MM/YY"
            />
          </div>
          <div class="flex-1">
            <label class="block text-gray-300 mb-2 font-semibold">CVV</label>
            <input
              type="password"
              required
              maxlength="3"
              class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
              placeholder="123"
            />
          </div>
        </div>

        <!-- Amount -->
        <div>
          <label class="block text-gray-300 mb-2 font-semibold">Amount</label>
          <input
            type="number"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="1000"
          />
        </div>

        <!-- Pay Button -->
        <button
          type="button"
          onclick="fakePayment()"
          class="w-full bg-purple-600 hover:bg-purple-700 px-8 py-3 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 hover-glow"
        >
          Pay Now
        </button>

        <!-- Back Button -->
        <a
          href="/"
          class="block text-center mt-4 text-purple-400 hover:underline"
          >← Back to Home</a
        >
      </form>
    </div>
  </div>
</section>
