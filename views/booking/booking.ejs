<div class="min-h-screen flex items-center justify-center bg-gray-900">
  <div class="w-full max-w-2xl bg-gray-800 p-8 rounded-2xl shadow-lg mt-20">
    <h1 class="text-3xl font-bold text-center mb-6 text-purple-400">
      ğŸ® Book Your Gaming Experience
    </h1>

    <form action="/booking" method="POST" class="space-y-6">
      <!-- Name -->
      <div>
        <label class="block mb-2 font-semibold">Full Name</label>
        <input
          type="text"
          name="name"
          required
          class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block mb-2 font-semibold">Email</label>
        <input
          type="email"
          name="email"
          required
          class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
        />
      </div>

      <!-- Phone -->
      <div>
        <label class="block mb-2 font-semibold">Phone Number</label>
        <input
          type="text"
          name="phone"
          pattern="\d{10}"
          required
          placeholder="10-digit number"
          class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
        />
      </div>

      <!-- Booking Type -->
      <div>
        <label class="block mb-2 font-semibold">Booking Type</label>
        <select
          name="bookingType"
          required
          class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
        >
          <option value="PC">Gaming PC</option>
          <option value="VR">VR Experience</option>
        </select>
      </div>

      <!-- Members Count -->
      <div>
        <label class="block mb-2 font-semibold">Number of Members</label>
        <input
          type="number"
          name="membersCount"
          value="1"
          min="1"
          class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
        />
      </div>

      <!-- Members Names -->
      <div>
        <label class="block mb-2 font-semibold">
          Members Names (comma separated)
        </label>
        <input
          type="text"
          name="membersName"
          placeholder="e.g. John, Sarah, Alex"
          class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
        />
      </div>

      <!-- Booking Time -->
      <div class="grid grid-cols-2 gap-6">
        <div>
          <label class="block mb-2 font-semibold">Start Time</label>
          <input
            type="datetime-local"
            name="bookingTime[start]"
            required
            class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
          />
        </div>
        <div>
          <label class="block mb-2 font-semibold">End Time</label>
          <input
            type="datetime-local"
            name="bookingTime[end]"
            required
            class="w-full px-4 py-2 rounded-lg bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
          />
        </div>
      </div>

      <!-- Submit -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-purple-600 hover:bg-purple-700 px-8 py-3 rounded-lg text-lg font-semibold transition-all transform hover:scale-105"
        >
          ğŸš€ Confirm Booking
        </button>
      </div>
    </form>

    <div class="text-center mt-6">
      <a
        href="/"
        class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded-lg text-white font-semibold transition-all transform hover:scale-105 shadow-md inline-block"
      >
        ğŸ  Go Home
      </a>
    </div>
  </div>
</div>
