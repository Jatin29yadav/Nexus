<section class="py-32 bg-gray-900 min-h-screen">
  <div class="container mx-auto px-6">
    <h1 class="text-3xl font-bold text-center mb-12 text-purple-400">
      ğŸ† Registered Teams
    </h1>

    <% if (teams.length === 0) { %>
    <p class="text-center text-gray-400">No teams have registered yet.</p>
    <% } else { %>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% teams.forEach(team => { %>
      <div
        class="bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-700 transition-all transform hover:scale-105 hover:shadow-purple-500/30 hover:border-purple-500/50"
      >
        <!-- Team Name -->
        <h2 class="text-xl font-bold text-purple-400 mb-4">
          <%= team.teamName %>
        </h2>

        <!-- Captain Info -->
        <div class="space-y-2 text-gray-300">
          <p>
            <span class="font-semibold text-white">ğŸ‘¤ Captain:</span> <%=
            team.captainName %>
          </p>
          <p>
            <span class="font-semibold text-white">ğŸ“§ Email:</span> <%=
            team.captainEmail %>
          </p>
          <p>
            <span class="font-semibold text-white">ğŸ“± Phone:</span> <%=
            team.captainPhone %>
          </p>
        </div>

        <!-- Members -->
        <% if (team.members.length > 0) { %>
        <div class="mt-4">
          <p class="font-semibold text-white mb-1">ğŸ‘¥ Members:</p>
          <div class="bg-gray-700 px-3 py-2 rounded-lg text-sm text-gray-300">
            <%= team.members.join(", ") %>
          </div>
        </div>
        <% } else { %>
        <p class="mt-4 text-sm text-gray-500 italic">No members listed</p>
        <% } %>
      </div>
      <% }) %>
    </div>
    <% } %>

    <!-- Buttons -->
    <div class="text-center mt-16 space-y-4">
      <a
        href="/tournament"
        class="bg-purple-600 hover:bg-purple-700 px-8 py-3 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 shadow-lg inline-block"
      >
        ğŸš€ Register Now
      </a>
      <br />
      <a
        href="/"
        class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded-lg text-white font-semibold transition-all transform hover:scale-105 shadow-md inline-block"
      >
        ğŸ  Go Home
      </a>
    </div>
  </div>
</section>
