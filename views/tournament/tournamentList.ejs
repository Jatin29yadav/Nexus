<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registered Teams - Nexus Tournament</title>
    <link
      href="https://fonts.googleapis.com/css2?family=K2D:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        font-family: "K2D", sans-serif;
      }
    </style>
    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body class="bg-gray-900 text-white">
    <!-- Navigation -->
    <nav
      class="navbar fixed w-full z-50 transition-all duration-300 bg-gray-900/80 backdrop-blur-sm"
    >
      <div class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
          <a
            href="/"
            class="text-2xl font-bold gradient-text hover:scale-105 transition-transform"
            >NEXUS</a
          >
          <div class="hidden md:flex space-x-8">
            <a href="/" class="nav-link">Home</a>
            <a href="/register" class="nav-link">Register</a>
            <a href="/login" class="nav-link">Login</a>
            <a href="/tournament/list" class="nav-link">Tournaments</a>
            <a href="/gallery" class="nav-link">Gallery</a>
            <a href="/contact" class="nav-link">Contact</a>
          </div>
          <button
            id="menu-btn"
            class="md:hidden text-xl hover:text-purple-500 transition-colors"
          >
            <i class="fas fa-bars"></i>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div
        class="md:hidden hidden absolute w-full bg-gray-800/95 backdrop-blur-sm"
        id="mobile-menu"
      >
        <div class="px-6 py-4 flex flex-col space-y-4">
          <a href="/" class="nav-link">Home</a>
          <a href="/register" class="nav-link">Register</a>
          <a href="/login" class="nav-link">Login</a>
          <a href="/tournament/list" class="nav-link">Tournaments</a>
          <a href="/gallery" class="nav-link">Gallery</a>
          <a href="/contact" class="nav-link">Contact</a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <section class="py-32">
      <div class="container mx-auto px-6">
        <h1 class="text-3xl font-bold text-center mb-8 gradient-text">
          Registered Teams
        </h1>

        <% if (teams.length === 0) { %>
        <p class="text-center text-gray-400">No teams have registered yet.</p>
        <% } else { %>
        <div class="grid gap-6 md:grid-cols-2">
          <% teams.forEach(team => { %>
          <div class="bg-gray-800 p-6 rounded-xl shadow-lg hover-glow">
            <h2 class="text-xl font-semibold text-purple-400 mb-2">
              <%= team.teamName %>
            </h2>
            <p><strong>Captain:</strong> <%= team.captainName %></p>
            <p><strong>Email:</strong> <%= team.captainEmail %></p>
            <p><strong>Phone:</strong> <%= team.captainPhone %></p>

            <% if (team.members.length > 0) { %>
            <p class="mt-2">
              <strong>Members:</strong> <%= team.members.join(", ") %>
            </p>
            <% } else { %>
            <p class="mt-2 text-gray-400 italic">No members listed</p>
            <% } %>
          </div>
          <% }) %>
        </div>
        <% } %>
        <div class="text-center mt-12">
          <a
            href="/tournament"
            class="bg-purple-600 hover:bg-purple-700 px-8 py-3 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 hover-glow inline-block"
          >
            ğŸš€ Register Now
          </a>
        </div>
        <div class="text-center mt-6">
          <a
            href="/"
            class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded-lg text-white font-semibold transition-all transform hover:scale-105 shadow-md inline-block"
          >
            ğŸ  Go Home
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 py-8 mt-16">
      <div
        class="container mx-auto px-6 flex flex-col md:flex-row justify-between items-center"
      >
        <p class="text-gray-400 text-sm">
          &copy; 2025 Nexus Gaming Cafe. All rights reserved.
        </p>
        <div class="flex space-x-4 mt-4 md:mt-0">
          <a href="#" class="text-gray-400 hover:text-purple-500"
            ><i class="fab fa-facebook"></i
          ></a>
          <a href="#" class="text-gray-400 hover:text-purple-500"
            ><i class="fab fa-twitter"></i
          ></a>
          <a href="#" class="text-gray-400 hover:text-purple-500"
            ><i class="fab fa-instagram"></i
          ></a>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    <script src="/script.js"></script>
  </body>
</html>
