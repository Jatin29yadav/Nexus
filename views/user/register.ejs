<!-- Registration Section -->
<section id="register" class="py-32 bg-gray-900">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-4xl font-bold mb-4 gradient-text">Register Now</h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Join Nexus Gaming Cafe today and be part of our growing community!
      </p>
    </div>

    <div
      class="max-w-2xl mx-auto bg-gray-800 p-8 rounded-xl shadow-lg hover-glow"
      data-aos="fade-up"
    >
      <form action="/register" method="POST" class="space-y-6">
        <div>
          <label class="block text-gray-300 mb-2 font-semibold">Username</label>
          <input
            type="text"
            name="username"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="Enter your username"
          />
        </div>

        <div>
          <label class="block text-gray-300 mb-2 font-semibold">Email</label>
          <input
            type="email"
            name="email"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="Enter your email"
          />
        </div>

        <div>
          <label class="block text-gray-300 mb-2 font-semibold"
            >Phone Number</label
          >
          <input
            type="tel"
            name="phone"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="Enter Your Phone number"
          />
        </div>

        <div>
          <label class="block text-gray-300 mb-2 font-semibold">Password</label>
          <input
            type="password"
            name="password"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="Create a password"
          />
        </div>

        <div>
          <label class="block text-gray-300 mb-2 font-semibold"
            >Confirm Password</label
          >
          <input
            type="password"
            name="confirmPassword"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="Re-enter password"
          />
        </div>

        <div class="flex items-center">
          <input
            type="checkbox"
            name="terms"
            required
            class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-700 rounded"
          />
          <label class="ml-2 text-gray-400 text-sm">
            I agree to the
            <a href="#" class="text-purple-500 hover:underline"
              >Terms & Conditions</a
            >
          </label>
        </div>

        <button
          type="submit"
          class="w-full bg-purple-600 hover:bg-purple-700 px-8 py-3 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 hover-glow"
        >
          Register
        </button>
      </form>

      <p class="text-gray-400 text-center mt-6">
        Already have an account?
        <a href="/login" class="text-purple-500 hover:underline">Login here</a>
      </p>
    </div>
    <div class="text-center mt-6">
      <a
        href="/"
        class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded-lg text-white font-semibold transition-all transform hover:scale-105 shadow-md inline-block"
      >
        üè† Go Home
      </a>
    </div>
  </div>
</section>
