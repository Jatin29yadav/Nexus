<!-- Login Section -->
<section id="login" class="py-32 bg-gray-900">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-4xl font-bold mb-4 gradient-text">Welcome Back</h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Login to continue your ultimate gaming experience.
      </p>
    </div>

    <div
      class="max-w-2xl mx-auto bg-gray-800 p-8 rounded-xl shadow-lg hover-glow"
      data-aos="fade-up"
    >
      <form action="/login" method="POST" class="space-y-6">
        <!-- Email -->
        <div>
          <label class="block text-gray-300 mb-2 font-semibold">Email</label>
          <input
            type="email"
            name="email"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="Enter your email"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-gray-300 mb-2 font-semibold">Password</label>
          <input
            type="password"
            name="password"
            required
            class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:border-purple-500 focus:outline-none"
            placeholder="Enter your password"
          />
        </div>

        <!-- Remember me -->
        <div class="flex items-center justify-between">
          <label class="flex items-center text-gray-400 text-sm">
            <input
              type="checkbox"
              name="remember"
              class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-700 rounded"
            />
            <span class="ml-2">Remember me</span>
          </label>
          <a
            href="/forgot-password"
            class="text-purple-500 hover:underline text-sm"
          >
            Forgot Password?
          </a>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-purple-600 hover:bg-purple-700 px-8 py-3 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 hover-glow"
        >
          Login
        </button>
      </form>

      <!-- No account yet -->
      <p class="text-gray-400 text-center mt-6">
        Don‚Äôt have an account?
        <a href="/register" class="text-purple-500 hover:underline"
          >Register here</a
        >
      </p>
    </div>
    <div class="text-center mt-6">
      <a
        href="/"
        class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded-lg text-white font-semibold transition-all transform hover:scale-105 shadow-md inline-block"
      >
        üè† Go Home
      </a>
    </div>
  </div>
</section>
